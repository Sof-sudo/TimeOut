<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LatestGamesActivity">

    <Button
        android:id="@+id/btnBackStats"
        android:layout_width="142dp"
        android:layout_height="69dp"
        android:layout_marginBottom="32dp"
        android:text="@string/btnBackPlayer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtNameStats"
        app:layout_constraintStart_toStartOf="@+id/txtNameStats" />

    <TextView
        android:id="@+id/txtNameStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/txtTeamName"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@+id/imgLogoStats"
        app:layout_constraintStart_toStartOf="@+id/imgLogoStats"
        app:layout_constraintTop_toBottomOf="@+id/imgLogoStats" />

    <ImageView
        android:id="@+id/imgLogoStats"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>